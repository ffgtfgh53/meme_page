<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" lang="en">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="{{ url_for('static', filename='stylesheets/styles.css') }}">
  <link rel="icon" href="{{ url_for('static', filename='images/meme_man.png')}}">
  {% with errors = get_flashed_messages(category_filter="error") %}
    {% if errors %}
      {% for error in errors %}
      <script>
        alert("{{error}}")
      </script>
      {% endfor %}
    {% endif %}
  {% endwith %}
  {% block head %}{% endblock %}
</head>
<body>
  <nav>
    <ul class="flexbox">
      <li><a href="/">Home</a></li>
      <li><a href="/settings">Settings</a></li>

      <li style="margin: 0 0 0 auto;">
        {% if not current_user.is_authenticated %}
          <a class="dropbtn" href="#">Account &#x25BC;</a>
          <ul>
              <li><a href="/signup">Signup</a></li>
              <li><a href="/login">Login</a></li>
          </ul>
        {% else %}
          <a class="dropbtn" href="#">{{current_user.username}} &#x25BC;</a>
          <ul>
              <li><a href="/profile">Profile</a></li>
              <li><a href="javascript:confirmLogout()">Logout</a></li>
          </ul>
        {% endif %}
      </li>
    </nav>

  {% with messages = get_flashed_messages(with_categories=True) %}
    {% if messages %}
      {% for message in messages %}
      <dialog style="position: absolute; min-width: 50%;" open>
        <form method="dialog" style="
          flex-direction: row; 
          justify-content: space-between;
          {% if message[0] == 'success' %}
          background-color: green;
          {% endif %}"> <!--Please ignore the errors, Jinja will fix it-->
          <p1 style="padding: 0 10px;">{{message[1]}}</p1>
          <button style="padding: 0 10px; ">x</button>
        </form>
      </dialog>
      {% endfor %}
    {% endif %}
  {% endwith %}



  {% block body %}{% endblock %}
  
  {% if current_user.is_authenticated %}
  <script>
  function confirmLogout() {
    var txt;
    if (confirm("Are you sure you want to logout?")) {
      window.location.pathname = '/logout'
    } else {
      txt = "You pressed Cancel!";
    }
  }
  </script>
  {% endif %}

</body>
</html>